{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "./dist/",
    "paths": {
      "*": [
          "node_modules/*",
          "src/@types/*"
      ]
    },
    "strictNullChecks": true,
    "target": "es6",
    "types": ["node", "jest"],
  },
  "include": [
    "./src/",
    "./__tests__/"
  ]
}
